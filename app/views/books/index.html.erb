<!DOCTYPE html>

      <h1>Books</h1>
      <table>
      <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
　　  </tr>
　　  <% @books.each do |book| %>
　　  <tr>
　　  <td><%= book.title %></td>
　　  <td><%= book.body %></td>
　　  <td><%= link_to "show", book_path(book) %></td>
　　  <td><%= link_to "edit", edit_book_path(book) %></td>
　　  <td><%= link_to 'destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
　　  </tr>
　　  <% end %>
      </table>
    
      
      <h2>New Book</h2>
      <!-- form_with部分 -->
      <%= form_with model: Book.new,url:books_path do |f| %>
      <div class="title">
        Title<br>
        <%= f.text_field :title %>
      </div>
      <div class="body">
         Body<br>
         <%= f.text_area :body %>
      </div>
      <div class="submit">
         <%= f.submit 'Create Book' %>
      </div>
      <% end %>